<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="OrthoVi.App"
             RequestedThemeVariant="Light">
	<!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

	<Application.Styles>
		
		<FluentTheme/>
		
		<StyleInclude Source="/Styles/ButtonStyles.axaml" />
		<StyleInclude Source="/Styles/CloseButton.axaml" />
		<StyleInclude Source="/Styles/ImagesButton.axaml" />
		
	</Application.Styles>

	<Application.Resources>
		<FontFamily x:Key="KoHoFont">avares://OrthoVi/Assets/Fonts#KoHo</FontFamily>
	</Application.Resources>
	
</Application>